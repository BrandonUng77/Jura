CREATE TABLE Reservation(
   ID_Client TEXT,
   Date_Reservation DATE,
   Hebergement VARCHAR(50),
   PRIMARY KEY(ID_Client)
);

CREATE TABLE Authentification(
   ID_Client VARCHAR(50),
   Nom VARCHAR(50),
   Numero BIGINT,
   Prenom VARCHAR(50),
   Email VARCHAR(50),
   PRIMARY KEY(ID_Client)
);

CREATE TABLE Hebergement(
   Numero_de_porte SMALLINT,
   Aile VARCHAR(10) NOT NULL,
   PRIMARY KEY(Numero_de_porte)
);

CREATE TABLE Authentifaction(
   ID_Client TEXT,
   ID_Client_1 VARCHAR(50),
   PRIMARY KEY(ID_Client, ID_Client_1),
   FOREIGN KEY(ID_Client) REFERENCES Reservation(ID_Client),
   FOREIGN KEY(ID_Client_1) REFERENCES Authentification(ID_Client)
);

CREATE TABLE ReservationLiens(
   ID_Client TEXT,
   Numero_de_porte SMALLINT,
   PRIMARY KEY(ID_Client, Numero_de_porte),
   FOREIGN KEY(ID_Client) REFERENCES Reservation(ID_Client),
   FOREIGN KEY(Numero_de_porte) REFERENCES Hebergement(Numero_de_porte)
);
